{{#extends "base"}}
{{#block "content"}}

<!-- Simple Home Button Navbar -->
<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><h2>Home</h2></a>
    </div>
</nav> 
<div class="container mt-4">
    <h1 class="mb-4">Comments, Posts, and Users</h1>
    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>User Name</th>
                <th>Post Title</th>
                <th>Comment</th>
                <th>Created on</th>
            </tr>
        </thead>
        <tbody>
            {{#each comments}}
            <tr>
                <td>{{username}}</td>
                <td>{{post_title}}</td>
                <td>{{comment_text}}</td>
                <td>{{created_at}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/block}}
{{/extends}}
